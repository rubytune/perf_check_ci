<!DOCTYPE html>
<html>
  <head>
    <title>Perf Check CI : Status Page</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true  %>
  </head>

  <body>
    <%= render 'shared/header' %>
    <div id="content" class=" show-me" style="height: 100%;">
      <div data-reactroot="" class="browser-app">
        <% unless @disable_search_nav %>
          <div class="browser-app-filter">
            <%= render 'shared/search_side_nav' %>
          </div>
        <% end %>
        <div class="browser-app-viewport">
          <div class="browser-app-viewport-content">
            <%= yield %>
          </div>
        </div>
    </div>
  </body>
</html>
