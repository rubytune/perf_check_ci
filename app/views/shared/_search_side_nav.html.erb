<%= form_tag params.except(:search).permit!, method: :get do %>
  <div class="browser-app-filter-container">
    <span class="browser-app-filter-clear"><a href="#"><i class="fa fa-search"></i></a></span>
    <%= search_field :search, params[:search], placeholder: 'Search Jobs', id: 'search-field' %>
  </div>
<% end %>

<ul class="browser-app-results">
  <% if @perf_check_jobs.blank? %>
    <li style="text-align: center;">No more results</li>
  <% else %>
    <% @perf_check_jobs.each do |job| %>
      <li>
          <div data-link-to="<%= perf_check_job_path(job) %>">
            <small class="pull-left status <%= job.status %>"><%= job.status %></small>
            <strong class="branch"><%= job.branch %></strong>
            <small class="time"><%= fa_icon 'clock-o' %> <%= job.created_at.stamp("Today at 3:35 PM") %></small>
            <small class="name">by <%= job.username %></small>
          </div>
      </li>
    <% end %>
    <li style="text-align: center;"><%= link_to 'Load More Results', '#' %></li>
  <% end %>
</ul>