<div class="job">
  <header class="job-header">
    <%= link_to "#{fa_icon 'refresh'} Re-Run PerfCheck".html_safe, [:clone_and_rerun, @perf_check_job], class: 'styled-button re-run pull-right' %>
    <%= link_to "#{fa_icon 'github'} View #1234567".html_safe, '#', class: 'styled-button re-run pull-right' %>
    <h2>PerfCheckJob ID: <%= @perf_check_job.id %></h2>
    <hr style="background-color: #EEE;" />
    <span class="pull-right perf-check-status-<%= @perf_check_job.id %> status <%= @perf_check_job.status %>"><%= @perf_check_job.status %></span>
    <h3><%= @perf_check_job.branch %></h3>
    <div class="created-by">
      <span class="time-ago"><%= fa_icon 'clock-o' %> <%= time_ago(@perf_check_job.created_at) %></span>
      by
      <span><strong><%= @perf_check_job.username %></strong></span>
    </div>
    <pre class="command"><%= @perf_check_job.all_arguments %></pre>
  </header>
  <!-- This is outputted the perfcheck daemon post -->
  <% if @perf_check_job.result_details.present?  %>
    <div class="details">
      <%== markdown(@perf_check_job.result_details) %>
    </div>
  <% end %>
  <pre id="log" data-perf-check-id="<%= @perf_check_job.id %>" 
    data-log-filename="<%= @perf_check_job.log_filename %>" 
    data-broadcast="<%= @perf_check_job.should_broadcast_log_file? %>">
   <%= @perf_check_job.should_broadcast_log_file? ? "Loading #{@perf_check_job.relative_log_path} ..." : @perf_check_job.read_log_file %>
  </pre>
</div>